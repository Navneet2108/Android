<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.e_college">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_scholarship"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_scholarship"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.AllUserActivity"></activity>
        <activity android:name=".ui.InfoActivity" />
        <activity android:name=".ui.PaymentCardActivity" />
        <activity android:name=".ui.AllGuidelinesActivity" />
        <activity android:name=".ui.StudentProfile" /> <!-- <activity android:name=".ui.AddLocationActivity" /> -->
        <activity android:name=".ui.AllCollegeActivity" />
        <activity android:name=".ui.CoursesActivity" /> <!-- <activity android:name=".ui.AddCoursesActivity" /> -->
        <!-- <activity android:name=".ui.CollegeActivity" /> -->
        <activity android:name=".ui.PersonalInfoActivity" />
        <activity android:name=".ui.ReviewsActivity" />

        <activity android:name=".ui.CollegeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ForgotPassword" />
        <activity android:name=".ui.RegistrationActivity" />
        <activity
            android:name=".ui.MainpageActivity"
            android:label="@string/title_activity_mainpage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.LoginActivity" />
    </application>

</manifest>